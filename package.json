{
  "name": "bech32-address-widget",
  "description": "React module for parsing bech32-format addresses",
  "version": "1.0.0",
  "author": "Brooks Boyd <bro@oks.me>",
  "devDependencies": {
    "babel-plugin-transform-es2015-modules-amd": "^6.5.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.5.0",
    "eslint": "^3.5",
    "eslint-plugin-react": "^4.2.3",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-babel": "^6.1.2",
    "gulp-eslint": "^2.0.0",
    "gulp-sourcemaps": "^2.0.0-alpha",
    "gulp-uglify": "^1.5.3"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "plugins": [
      "eslint-plugin-react"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "amd": true,
      "es6": true
    },
    "rules": {
      "array-bracket-spacing": [
        1,
        "never"
      ],
      "block-spacing": [
        1,
        "always"
      ],
      "brace-style": [
        2,
        "1tbs"
      ],
      "comma-spacing": [
        1,
        {
          "before": false,
          "after": true
        }
      ],
      "comma-style": [
        1,
        "last"
      ],
      "curly": [
        1,
        "multi-line"
      ],
      "dot-location": [
        1,
        "property"
      ],
      "eol-last": 1,
      "indent": [
        2,
        2,
        {
          "SwitchCase": 1
        }
      ],
      "jsx-quotes": [
        1,
        "prefer-double"
      ],
      "key-spacing": [
        1,
        {
          "beforeColon": false,
          "afterColon": true,
          "mode": "minimum"
        }
      ],
      "keyword-spacing": 1,
      "linebreak-style": [
        2,
        "unix"
      ],
      "object-curly-spacing": [
        1,
        "always"
      ],
      "prefer-arrow-callback": 1,
      "semi": 1,
      "semi-spacing": [
        2,
        {
          "before": false,
          "after": true
        }
      ],
      "no-alert": 1,
      "no-array-constructor": 1,
      "no-caller": 1,
      "no-console": 1,
      "no-else-return": 1,
      "no-eval": 1,
      "no-extend-native": 1,
      "no-implied-eval": 1,
      "no-invalid-this": 1,
      "no-lonely-if": 1,
      "no-loop-func": 1,
      "no-param-reassign": 1,
      "no-proto": 1,
      "no-script-url": 1,
      "no-throw-literal": 1,
      "no-useless-call": 1,
      "no-unneeded-ternary": 1,
      "no-unused-vars": [
        1,
        {
          "varsIgnorePattern": "React",
          "args": "none"
        }
      ],
      "no-var": 1,
      "no-with": 1,
      "react/jsx-uses-vars": 1,
      "react/jsx-closing-bracket-location": 2,
      "react/jsx-curly-spacing": [
        2,
        "never"
      ],
      "react/jsx-equals-spacing": [
        2,
        "never"
      ],
      "react/jsx-no-undef": 2,
      "react/no-deprecated": 1,
      "react/no-direct-mutation-state": 2,
      "react/wrap-multilines": 2
    }
  }
}
